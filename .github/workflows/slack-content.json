{
                "text": "A GitHub Action has succeeded",
                "attachments": [{
                        "color": "good",
                        "fields": [{
                                        "title": "Repository",
                                        "short": false,
                                        "value": "<{{ github.repository.url }}|{{ github.repository.url }}>"
                                },
                                {
                                        "title": "Ref",
                                        "short": false,
                                        "value": "${{ github.context.ref }}"
                                },
                                {
                                        "title": "Commit",
                                        "short": false,
                                        "value": "<https://github.com/${{ github.repository }}/commit/${{ github.sha }}|${{ github.sha }}>"
                                },
                                {
                                        "title": "Author",
                                        "short": false,
                                        "value": "${{ github.event.commits[0].author.name }}<${{ github.event.commits[0].author.email }}>"
                                },
                                {
                                        "title": "Message",
                                        "short": false,
                                        "value": "${{ github.event.commits[0].message }}"
                                },
                                {
                                        "title": "Workflow",
                                        "short": false,
                                        "value": "<https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }}|${{ github.context.workflow }}>"
                                }
                        ]
                }]
            }
